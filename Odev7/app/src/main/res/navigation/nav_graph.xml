<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/anasayfaFragment">

    <fragment
        android:id="@+id/anasayfaFragment"
        android:name="com.example.odev7.ui.fragment.AnasayfaFragment"
        android:label="AnasayfaFragment">
        <action
            android:id="@+id/actionAnasayfaToKayit"
            app:destination="@id/kayitFragment" />
        <action
            android:id="@+id/actionAnasayfaToDetay"
            app:destination="@id/detayFragment" />
    </fragment>

    <fragment
        android:id="@+id/kayitFragment"
        android:name="com.example.odev7.ui.fragment.KayitFragment"
        android:label="KayitFragment">
        <action
            android:id="@+id/actionKayitToAnasayfa"
            app:destination="@id/anasayfaFragment"
            app:popUpTo="@id/anasayfaFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/detayFragment"
        android:name="com.example.odev7.ui.fragment.DetayFragment"
        android:label="DetayFragment">
        <action
            android:id="@+id/actionDetayToAnasayfa"
            app:destination="@id/anasayfaFragment"
            app:popUpTo="@id/anasayfaFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="yapilacak"
            app:argType="com.example.odev7.data.entity.Yapilacak" />
    </fragment>

</navigation> 